{
  "name": "community-risk",
  "description": "Dashboard",
  "version": "0.0.2",
  "author": "510 - Rode Kruis <support@510.global> (https://www.510.global/)",
  "license": "LGPL-3.0",
  "repository": "github:rodekruis/CommunityRisk",
  "homepage": "https://dashboard.510.global/",
  "config": {
    "files_to_check_syntax": "**/**.{json,yaml,yml,css,html,js}"
  },
  "scripts": {
    "postinstall": "bower-installer -p",
    "clean:dist": "rimraf public/dist/*",
    "prestart": "npm run clean:dist",
    "start": "grunt",
    "prebuild": "npm run clean:dist",
    "build": "grunt build",
    "predeploy": "npm install",
    "deploy": "npm run build && echo 'Deployed!'",
    "fix:syntax": "prettier --write $npm_package_config_files_to_check_syntax",
    "fix:js": "eslint --fix --fix-type suggestion --ignore-path .prettierignore ./",
    "test:syntax": "prettier --check $npm_package_config_files_to_check_syntax",
    "test:js": "eslint --quiet --cache --ignore-path .prettierignore ./",
    "test": "npm run test:syntax && npm run test:js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --verbose",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "async": "1.5.x",
    "bcrypt": "3.0.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "geotiff": "1.0.0-beta.6",
    "glob": "^7.1.3",
    "google-spreadsheet": "2.0.x",
    "helmet": "^3.16.0",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "morgan": "1.7.x",
    "nodemailer": "2.3.x",
    "nunjucks": "^3.2.0",
    "passport": "0.2.x",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.x",
    "path": "0.12.x",
    "pg": "6.1.x",
    "request": "2.88.0",
    "sequelize": "4.42.0",
    "url": "0.11.x"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "grunt": "1.0.3",
    "grunt-cli": "1.3.2",
    "grunt-concurrent": "2.3.*",
    "grunt-contrib-cssmin": "1.0.*",
    "grunt-contrib-uglify": "1.0.*",
    "grunt-contrib-watch": "1.0.*",
    "grunt-nodemon": "*",
    "husky": "1.3.1",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "rimraf": "2.6.3"
  }
}
